{
    "compilerOptions": {
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowJs": true,
        "target": "es2015",
        "types": [
            "node"
        ],
        "lib": [
            "es2017",
            "es2016",
            "es2015",
            "dom"
        ]
    },
    "files": [
        "src/electron/main.ts",
    ],
    "include": [
        "src/**/*.d.ts",
        "src/**/*.worker.ts"
    ],
    "exclude": [
        "node_modules",
        "src/**/*.spec.ts",
    ]
}